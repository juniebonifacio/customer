<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>Covershot: Hot Spots</title>
		<link rel="stylesheet" href="css/normalize.css">
		<link rel="stylesheet" href="css/covershot.css">
		<style type="text/css">
			div#bodyWrapper {
				padding-top: 60px;
			}	
		</style>
		<script src="scripts/jquery-1.7.1.min.js"></script>
	    <script>
	      window.onscroll = function () {
	        document.querySelectorAll('#topContainer')[0].className = (window.scrollY !== 0) ? 'shadowed' : '';
	      };
	    </script>
	</head>
	<body>
		<div id="topContainer">
	      <div id="topBar">
	        <div id="topBarContent">
	          <p class="left">Covershot</p> 
	          <p class="right"><a href="index.html">Coverage</a><a href="hotspots.html" class="selectedFeature">Hotspots</a></p>
	        </div>
	      </div>
	    </div>
		<div id="bodyWrapper">
			<section id="bod">
				<section id="mainContent">
					<table>
						<thead>
							<tr>
								<th>File</th>
								<th>Lines</th>
								<th>Hits</th>
							</tr>
						</thead>
						<tbody>
							<% for (var i = 0; i < hotspots.length; i++) { %>
							<tr>
								<td>
									<a href="src/<%= hotspots[i].filename %>.html?highlightStartLineNumber=<%= hotspots[i].startLineNumber %>&highlightEndLineNumber=<%= hotspots[i].endLineNumber %>#line<%= hotspots[i].startLineNumber %>"><%= hotspots[i].filename %></a>
								</td>
								<td>
									<p><%= hotspots[i].lineRangeString %></p>
								</td>
								<td>
									<p><%= hotspots[i].hitsAvg.toFixed(0) %></p>
								</td>
							</tr>
							<% } %>
						</tbody>
					</table>
				</section>
			</section>
		</div>
		<footer> 
			<p>Report generated by <a>Covershot</a> on <%= generated %>.</p> 
		</footer>
		<script type="text/javascript">
			// $('section.mainContent tbody tr td:last-child').append('')
		</script>
	</body>
</html>
